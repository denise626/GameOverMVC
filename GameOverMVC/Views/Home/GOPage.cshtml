@model GameOverMVC.Models.GameOver

<div class="container col-xxl-8 px-4 py-5 mt-5">
    <div class="row gy-2 h-100 row-cols-md-2 row-cols-1">
        <div class="col border-2 border-end">
            <h1 class="font-weight-bold lh-1 mb-3">GameOver</h1>
            <h4 class="lead">
                This application will consider the two numbers entered and for each number between 1 and 100.
                It will print GAME for the numbers that are divisible by the first number. OVER will be printed
                for the numbers divisible by the second number. GAMEOVER for the numbers divisible by both and 
                simply print the number if it is not divisible by either.
            </h4>

            <h2 class="mt-5 border-bottom border-2">Instructions</h2>
            <p>
                Enter 2 numbers. The first number will be used to evaluate Game. 
                The second number will be used to evaluate Over and GameOver will be determined based on 
                the combination of the two numbers.
            </p>
        </div>
        <div class="col">
            <div>
                <h5>Enter numbers</h5>
                @*Form goes here*@
                <form asp-controller="Home" asp-action="GOPage" method="post">
                    <div class="form-group">
                        <label asp-for="GameValue">Game Value</label>
                        <input type="number" asp-for="GameValue" class="form-control" placeholder="Enter Game" value="@Model.GameValue" />
                    </div>
                    <div class="form-group">
                        <label asp-for="OverValue">Over Value</label>
                        <input type="number" asp-for="OverValue" class="form-control" placeholder="Enter Over" value="@Model.OverValue" />
                    </div>
                    <button type="submit" class="btn btn-dark mt-2">Submit</button>
                </form>
                <h2 class="mt-5 border-bottom border-2">Results</h2>
                <div class="table-responsive">
                @*Table goes here*@
                @if (@Model.Result.Count > 0)
                    {
                        <table class="table-striped table-hover table table-dark">
                            <thead>
                                <tr><th colspan="5">Game Over Results</th></tr>
                            </thead>
                            @for (int i = 0; i < Model.Result.Count(); i +=5)

                            {
                                <tr><td>@Model.Result[i]</td><td>@Model.Result[i + 1]</td><td>@Model.Result[i + 2]</td><td>@Model.Result[i + 3]</td><td>@Model.Result[i + 4]</td></tr>
                            }
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
